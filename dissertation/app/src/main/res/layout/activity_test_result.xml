<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TestActivityPack.TestResult">

    <TextView
        android:layout_marginTop="200dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesaj Rezultat"
        android:textSize="50sp">
    </TextView>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_below="@+id/textview_message"
        android:text="TextView"
        android:textSize="30sp">
    </TextView>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/button_tryagain"
        android:layout_below="@+id/textview_result"
        android:text="Mai incearc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>
</RelativeLayout>